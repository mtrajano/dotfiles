[delta]
  line-numbers = true
  syntax-theme = Rigel
  minus-style = "#c43060"
  zero-style = "#e6e6dc"
  plus-style = "#9cf087"
  minus-emph-style = "#e6e6dc #c43060"
  plus-emph-style = "#002635 #9cf087"
  line-numbers-minus-style="#c43060"
  line-numbers-zero-style="#e6e6dc"
  line-numbers-plus-style="#9cf087"
  file-style = "#f08e48"
