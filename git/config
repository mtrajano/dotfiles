[push]
  default = current

[alias]
  a = add
  l = log --oneline

  # status
  s = status
  rs = restore --staged

  # diff
  d = diff
  dc = diff --cached
  di = !"fn() { git diff HEAD~$1; }; fn"

  # branch
  b = branch
  bd = branch -d
  bD = branch -D

  # checkout
  co = checkout
  cb = checkout -b

  # commit
  cm = commit -m
  cmu = commit -am
  ca = commit --amend

  # stash
  st = stash
  sp = stash pop

  # push/pull
  up = push --force origin
  pu = pull --rebase upstream master

  # MISC
  root = rev-parse --show-toplevel

[pager]
  branch = false

[interactive]
  diffFilter = delta --color-only

[diff "php"]
  xfuncname = "((public|private|protected)( static)? function \\w+[^)]+\\)( : \\S+)?|class \\w+( extends [\\\\\\w]+)?)"

[diff "vim"]
  xfuncname = "^fu(nction)?!? \\w+]\\(\\)"

[diff "lua"]
  xfuncname = "(local function \\w+[^)]\\)|\\w+\\.[\\w\\.]+ = function[^)]+\\))"

[diff "tmux"]
  xfuncname = ""

[diff "sh"]
  xfuncname = ""
